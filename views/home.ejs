<link rel="stylesheet" href="/assets/css/<%= rev("home.css") %>">

<div class="home-container">
  <h1 class="home-title">Home</h1>

  <div class="home-content">

    <!-- Post section -->
    <section id="feed-posts" class="feed-section">

      <!-- Post Form -->
      <h4 class="section-title">Posts</h4>
      <% if(locals.user){ %>
        <form action="/posts/create" method="post" id="new-post-form" class="post-form">
          <textarea name="content" placeholder="Type here ..." required></textarea>
          <input type="submit" value="Post">
        </form>
      <% } %>

      <div id="posts-list-container" class="posts-list">
        <%- include("_post.ejs") -%>
      </div>
    </section>

    <section id="user-friends" class="friends-section">
      <h4 class="section-title">Friends</h4>
      <div class="friends-list">
        <% for(u of all_users){ %>
          <p>
            <a href="/users/profile/<%= u.id %>" class="friend-link"><%= u.name %></a>
          </p>
        <% } %>
      </div>
    </section>
  </div>
</div>

<script src="/assets/js/<%= rev("homePost.js") %>"></script>

